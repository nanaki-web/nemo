{# CARD #}
{% extends 'base.html.twig' %}

{% block body %}

	<section class="container">
		<div class="police-card card mb-3">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="{{asset('images/' ~ produit.photo)}}" class="img-fluid rounded-start" style="height:369px;" alt="{{produit.photo}}">
				</div>
				<div class="col-md-8">
					<div class=" body-color card-body" style="height:369px;">
						<h5 class="card-title">{{produit.nom}}-{{produit.taille}}</h5>
						<p><span class= "card-font">Référence : </span>{{produit.reference}}</p>
						<p class="card-text">Nom scientifique :
							{{produit.NomScientifique}}</p>
						<p class="card-text">Nom Commun :
							{{produit.nomCommun}}</p>
						<p class="card-text">Description :
							{{produit.description}}</p>
						<p class="card-text">Origine:
							{{produit.origine}}</p>
						<p class="card-text">Famille :
							{{produit.famille}}</p>
						<p class="card-text">PH :
							{{produit.ph}}</p>
						<p class="card-text">Température :
							{{produit.temperature}}</p>
						<p class="card-text">{{produit.prix}}€</p>
						<a href="{{path("ajouter",{id: produit.id})}} " class="btn btn-danger">Ajouter au panier</a>
					</div>
				</div>
			</div>
		</div>
	</section>


